<% if post.like_by?(current_user) %>
    <%= link_to(post_add_path(post), method: :delete, remote: true, id: :"js-like-button-for-home-#{post.id}") do %>
        <i class="fa-lg fas fa-bookmark icon-btn"></i>
    <% end %>
<% else %>
    <%= link_to(post_add_path(post), method: :post, remote: true, id: :"js-like-button-for-home-#{post.id}") do %>
        <i class="fa-lg fas fa-bookmark icon-btn"></i>
    <% end %>
<% end %>